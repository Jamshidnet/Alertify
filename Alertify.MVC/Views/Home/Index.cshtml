@using Alertify.Domain.Entities.Identity;
@using Microsoft.AspNetCore.Identity;
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject IConfiguration Configuration

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center" style="display:flex; flex-direction:column; justify-content:center; align-items:center;">

    <div class="d-flex align-items-center justify-content-center" id="main">
        <img src="/5.jpg" class="logoStyle"/>
    </div>

    @if (User.IsInRole("Admin"))
    {
         <div class="button-container">
             <a asp-controller="Organization" asp-action="GetAllOrganizations" class="btn btn-dark custom-btn">
                 Organizations
             </a>
            <a asp-controller="OrganizationClassification" asp-action="GetAllOrganizationClassifications" class="btn btn-dark custom-btn">
                Organization Classifications
            </a>
             <a asp-controller="SmsTemplate" asp-action="GetAllSmsTemplatesByCompanyId" class="btn btn-dark custom-btn">
                 SmsTemplates
             </a>
             <a asp-controller="MessageLog" asp-action="GetAllMessageLogsByCompanyId" class="btn btn-dark custom-btn">
                 Statistics
             </a>
         </div>
    }
    @if (User.Identity.IsAuthenticated && User.IsInRole("User"))
    {
        <div class="button-container">
             <a asp-controller="Organization" asp-action="GetAllOrganizations" class="btn btn-dark custom-btn">
                 Organizations
             </a>
            <a asp-controller="OrganizationClassification" asp-action="GetAlOrganizationClassifications" class="btn btn-dark custom-btn">
                OrganizationClassification
             </a>
             <a asp-controller="SmsTemplate" asp-action="GetAllSmsTemplates" class="btn btn-dark custom-btn">
                 SmsTemplates
             </a>
             <a asp-controller="MessageLog" asp-action="GetAllMessageLogs" class="btn btn-dark custom-btn">
                 Statistics
             </a>
         </div>
    }
</div>

<style>
    .button-container {
        margin-top: 20px;
    }

    .custom-btn {
        color: black;
        background-color: white;
    }
</style>

<section id="about" class="section">
    <h2>About Us</h2>
    <p>
        We are a leading SMS service provider dedicated to helping businesses connect with their customers effectively.
        Our platform offers reliable and efficient messaging solutions tailored to meet your specific needs.
    </p>
</section>

<section id="services" class="section">
    <h2>Our Services</h2>
    <ul>
        <li>Bulk SMS Messaging</li>
        <li>Two-Way SMS Communication</li>
        <li>SMS API Integration</li>
        <li>Custom SMS Solutions</li>
    </ul>
</section>

<section id="contact" class="section">
    <h2>Contact Us</h2>
    <p>
        If you have any questions or inquiries, please feel free to contact us.
    </p>
    <p>
        Email: <a href="mailto:info@example.com">info@example.com</a>
    </p>
    <p>
        Phone: +1234567890
    </p>
</section>